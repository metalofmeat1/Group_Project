@bot.message_handler(commands=['start'])
def handle_start(message):
    bot.send_message(message.chat.id,
                     'Привіт, Французький бренд розпродує останні сумки минулого сезону підпільно так як вони не можуть продавати в відкриту, так дешево')
    keyboard = types.InlineKeyboardMarkup(row_width=3)
    yellow_button = types.InlineKeyboardButton(text="Жовтий", callback_data="yellow")
    pink_button = types.InlineKeyboardButton(text="Рожевий", callback_data="pink")
    red_button = types.InlineKeyboardButton(text="Червоний", callback_data="red")
    keyboard.add(yellow_button, pink_button, red_button)

    bot.send_message(message.chat.id, 'Виберіть колір сумки:', reply_markup=keyboard)


@bot.callback_query_handler(func=lambda call: True)
def handle_callback(call):
    if call.data in photos:
        for photo_id in photos[call.data]:
            bot.send_photo(call.message.chat.id, photo_id)

    bot.send_message(call.message.chat.id, f"Ви обрали колір: {call.data}")


bot.polling()
